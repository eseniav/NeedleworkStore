<Window x:Class="NeedleworkStore.Windows.ThreeChoiceModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeedleworkStore.Windows"
        mc:Ignorable="d"
        Title="ThreeChoiceModal" Height="150" Width="400"
        ResizeMode="NoResize" ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        >
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="MinWidth" Value="80"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBlock x:Name="MsgTxb" Margin="10" TextWrapping="Wrap" Text="Some text" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelBtn" Content="Cancel" IsCancel="True" Click="Cancel_Click"/>
            <Button x:Name="Opt1Btn" Content="Option1" Click="Option1_Click"/>
            <Button x:Name="Opt2Btn" Content="Option2" IsDefault="True" Click="Option2_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
