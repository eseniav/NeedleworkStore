<Page x:Class="NeedleworkStore.Pages.OrderRegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:NeedleworkStore.Pages"
      mc:Ignorable="d"
      Title="OrderRegistrationPage">
    <StackPanel Margin="10">
        <StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1" Height="550">
                <StackPanel>
                    <GroupBox Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="5 10 5 0">
                                <Image Source="\ProdImages\KlartLavandadlyanee.jpg" MaxWidth="100" MaxHeight="100"
                                        HorizontalAlignment="Right" Margin="20 0">
                                    <Image.ToolTip>
                                        <ToolTip ToolTipService.InitialShowDelay="3000">
                                            <Image Source="\ProdImages\KlartLavandadlyanee.jpg" MaxWidth="350" MaxHeight="350"/>
                                        </ToolTip>
                                    </Image.ToolTip>
                                </Image>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                                <Label MinHeight="20"/>
                                <Grid HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                        <TextBlock Style="{StaticResource ChakraTB}" Text="Компания:"/>
                                        <TextBlock Style="{StaticResource ChakraTB}" Text="Название:"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                                        <TextBlock Style="{StaticResource ChakraTB}" Text="Кларт"/>
                                        <TextBlock Style="{StaticResource ChakraTB}" Text="Лаванда для неё"/>
                                    </StackPanel>
                                </Grid>
                                <WrapPanel>
                                    <Label>
                                        <Hyperlink Name="hlAbout" Foreground="#2A3759" FontFamily="Cakra Normal"
                                                   Click="hlAbout_Click">Подробнее
                                        </Hyperlink>
                                    </Label>
                                </WrapPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="0 0 20 0">
                                <StackPanel HorizontalAlignment="Center" Margin="0 30 0 10">
                                    <Label FontFamily="Anticva" Foreground="#2A3759" FontSize="17"
                                            Content="100"/>
                                    <Label FontFamily="Anticva" Foreground="#2A3759" FontSize="17" Content="руб"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <WrapPanel HorizontalAlignment="Center">
                                    <RepeatButton Name="btnMinus" Margin="0 0 10 0" Style="{StaticResource btnRep}"
   VerticalAlignment="Bottom" MinWidth="20" Click="btnMinus_Click"
   >
                                        <RepeatButton.Background>
                                            <SolidColorBrush Opacity="0.25"/>
                                        </RepeatButton.Background>
                                        <WrapPanel>
                                            <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
         >-
                                            </TextBlock>
                                        </WrapPanel>
                                    </RepeatButton>
                                    <TextBlock Name="txblQuan" Foreground="#2A3759" VerticalAlignment="Center"
FontFamily="Caesar Dressing Cyrillic" TextWrapping="Wrap"
FontSize="18" LineHeight="15" HorizontalAlignment="Center"
>1
                                    </TextBlock>
                                    <RepeatButton Name="btnPlus" Margin="10 0 0 0" Style="{StaticResource btnRep}"
     VerticalAlignment="Bottom" MinWidth="20" Click="btnPlus_Click"
     >
                                        <WrapPanel>
                                            <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
                                             >+
                                            </TextBlock>
                                        </WrapPanel>
                                    </RepeatButton>
                                </WrapPanel>
                                <Button Name="btnDel" MinWidth="100" MaxWidth="120"
                             Margin="10" Style="{StaticResource btnOpacity}" VerticalAlignment="Bottom"
                             Click="btnDel_Click">
                                    <WrapPanel>
                                        <TextBlock FontSize="16" Style="{StaticResource txtButtonOpacity}">Удалить</TextBlock>
                                    </WrapPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource ChakraTB}" Text="Выберите пункт выдачи" HorizontalAlignment="Right" Margin="50 10"/>
            <ComboBox Grid.Column="0" Grid.Row="1" Name="cmbPickUpPoint" HorizontalContentAlignment="Right"  SelectionChanged="cmbPickUpPoint_SelectionChanged" Width="200" Height="20" Margin="50 10">
                <ComboBoxItem FontFamily="Cakra Normal" Foreground="#2A3759" Content="дешевле" Margin="5"/>
            </ComboBox>
            <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource ChakraTB}" Text="Оплата" HorizontalAlignment="Right" Margin="50 10"/>
            <ComboBox Grid.Column="0" Grid.Row="3" Name="cmbPayment" HorizontalContentAlignment="Right" SelectionChanged="cmbPayment_SelectionChanged"  Width="200" Height="20" Margin="50 10">
                <ComboBoxItem FontFamily="Cakra Normal" Foreground="#2A3759" Content="При получении" Margin="5" IsSelected="True"/>
                <ComboBoxItem FontFamily="Cakra Normal" Foreground="#2A3759" Content="Сразу" Margin="5"/>
            </ComboBox>
            <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource ChakraTB}" Text="Номер карты:" HorizontalAlignment="Right" Margin="50 10"/>
            <TextBox Grid.Column="1" Grid.Row="1" Name="txtBCardNum" Style="{StaticResource txtBoxReg}" Height="20" Width="200" Margin="50 10"/>
            <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource ChakraTB}" Text="Срок действия карты (месяц/год):" HorizontalAlignment="Right" Margin="50 10"/>
            <WrapPanel Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="50 10">
                <TextBox Name="txtBMonth" Style="{StaticResource txtBoxReg}" Width="50" Height="20" Margin="5"/>
                <TextBlock Style="{StaticResource ChakraTB}" FontWeight="Bold" FontSize="20" Text="/"/>
                <TextBox Name="txtBYear" Style="{StaticResource txtBoxReg}" Width="50" Height="20" Margin="5"/>
            </WrapPanel>
            <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontFamily="Anticva" Foreground="#2A3759" FontSize="17" Margin="50 0 0 0"
                        VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Количество товаров:"/>
                <Label Grid.Column="1" FontFamily="Anticva" Foreground="#2A3759" FontSize="17" FontWeight="Bold"
                       VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="100"/>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="2" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontFamily="Anticva" Foreground="#2A3759" FontSize="17" Margin="50 0 0 0"
       VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Сумма к оплате:"/>
                <WrapPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Label FontFamily="Anticva" Foreground="#2A3759" FontSize="17" FontWeight="Bold"
            Content="100"/>
                    <Label FontFamily="Anticva" Foreground="#2A3759" FontSize="17" Content="руб"/>
                </WrapPanel>
            </Grid>
        </Grid>
        <Button Name="btnPOrderReg" Margin="0 10 0 0" Style="{StaticResource btnColor}" Height="50"
        HorizontalAlignment="Center" Grid.Column="2" Click="btnPOrderReg_Click"
        >
            <StackPanel>
                <TextBlock FontSize="16" Style="{StaticResource txtButtonColor}"
                   HorizontalAlignment="Center" Margin="25 0"
                   >Заказать
                </TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
</Page>
