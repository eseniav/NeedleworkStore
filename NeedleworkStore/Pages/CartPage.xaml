<Page x:Class="NeedleworkStore.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeedleworkStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="CartPage">
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Top">
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button  Name="btnShop" Grid.Column="0" Grid.Row="0" MinWidth="100"
                         Margin="10 0" BorderBrush="#778FD2" HorizontalAlignment="Right"
                         Click="btnShop_Click" MaxWidth="120" Height="25"
                         >
                    <Button.Background>
                        <SolidColorBrush Opacity="0.25"/>
                    </Button.Background>
                    <WrapPanel>
                        <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
               >О магазине
                        </TextBlock>
                    </WrapPanel>
                </Button>
                <Button Name="btnProd" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left"
    MinWidth="100" MaxWidth="120" Margin="10 0" Height="25"
    BorderBrush="#778FD2" Click="btnProd_Click"
    >
                    <Button.Background>
                        <SolidColorBrush Opacity="0.25"/>
                    </Button.Background>
                    <WrapPanel>
                        <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
               >Каталог
                        </TextBlock>
                    </WrapPanel>
                </Button>                
                <WrapPanel Grid.Column="2" Grid.Row="0">
                    <Button Name="btnProfile" MinWidth="100" MaxWidth="120"
                            Margin="10 0" BorderBrush="#778FD2" Height="25"
                            Click="btnProfile_Click"
                            >
                        <Button.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </Button.Background>
                        <WrapPanel>
                            <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
                                       >Профиль
                            </TextBlock>
                        </WrapPanel>
                    </Button>
                    <Button Name="btnExit" MinWidth="100" MaxWidth="120" Height="25"
                            Margin="10 0" BorderBrush="#778FD2" Click="btnExit_Click"
                            >
                        <Button.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </Button.Background>
                        <WrapPanel>
                            <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">Выйти</TextBlock>
                        </WrapPanel>
                    </Button>
                    <TextBox Name="txtSearch" MinWidth="100" MaxHeight="20"></TextBox>
                    <Button Name="btnSearch" MinWidth="100" MaxWidth="120" 
                            Margin="10 0" BorderBrush="#778FD2" HorizontalAlignment="Right"
                            Click="btnSearch_Click"
                            >
                        <Button.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </Button.Background>
                        <WrapPanel>
                            <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">Найти</TextBlock>
                        </WrapPanel>
                    </Button>
                </WrapPanel>
                <TextBlock Grid.Column="2" Grid.Row="1" Foreground="#2A3759"
                           FontFamily="Caesar Dressing Cyrillic" TextWrapping="Wrap"
                           FontSize="13" LineHeight="15" HorizontalAlignment="Right"
                           VerticalAlignment="Center" Margin="10 5"
                           >Рады вас видеть, Имя пользователя!
                </TextBlock>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <CheckBox Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <CheckBox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <UniformGrid Grid.Column="1" Grid.Row="0" Columns="3">
                    <TextBlock Foreground="#2A3759" VerticalAlignment="Center"
                               FontFamily="Caesar Dressing Cyrillic" TextWrapping="Wrap" Margin="10 0 0 0"
                               FontSize="10" LineHeight="15" HorizontalAlignment="Left"
                               >Выбрано: 
                        <TextBlock FontSize="15">2</TextBlock>
                    </TextBlock>
                    <TextBlock Foreground="#2A3759" VerticalAlignment="Center"
                               FontFamily="Caesar Dressing Cyrillic" TextWrapping="Wrap" Margin="10 0 0 0"
                               FontSize="10" LineHeight="15" HorizontalAlignment="Left"
                               >Количество товаров: 
                        <TextBlock FontSize="15">20</TextBlock>
                    </TextBlock>
                    <WrapPanel HorizontalAlignment="Right" Margin="0 10">
                        <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="Сортировать по"/>
                        <ComboBox Name="cmbSort" MinWidth="80" SelectionChanged="cmbSort_SelectionChanged">
                            <ComboBoxItem FontFamily="Cakra Normal" Foreground="#2A3759" Content="цене" Margin="5"/>
                            <ComboBoxItem FontFamily="Cakra Normal" Foreground="#2A3759" Content="наличию" Margin="5"/>
                            <ComboBoxItem FontFamily="Cakra Normal" Foreground="#2A3759" Content="названию" Margin="5"/>
                            <ComboBoxItem FontFamily="Cakra Normal" Foreground="#2A3759" Content="рейтингу" Margin="5"/>
                        </ComboBox>
                    </WrapPanel>
                </UniformGrid>                
                <StackPanel Grid.Column="1" Grid.Row="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1">
                        <StackPanel>
                            <GroupBox Margin="10 0 0 10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>                                        
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>                                    
                                    <StackPanel Grid.Column="0">
                                        <WrapPanel HorizontalAlignment="Right">
                                            <Image Source="\ResImages\Chernika.png" MaxWidth="15"/>
                                            <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="4,9" Margin="0 0 20 0"/>
                                        </WrapPanel>
                                        <Image Source="\ProdImages\KlartLavandadlyanee.jpg" MaxWidth="180" MaxHeight="180"
                                           HorizontalAlignment="Right" Margin="20 0"
                                           >
                                            <Image.ToolTip>
                                                <ToolTip ToolTipService.InitialShowDelay="3000">
                                                    <Image Source="\ProdImages\KlartLavandadlyanee.jpg" MaxWidth="350" MaxHeight="350"/>
                                                </ToolTip>
                                            </Image.ToolTip>
                                        </Image>
                                    </StackPanel>                                    
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <Label MinHeight="20"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="Компания:"/>
                                                <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="Название:"/>
                                                <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="Наличие:"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="Кларт"/>
                                                <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="Лаванда для нее"/>
                                                <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="Есть в наличии"/>
                                            </StackPanel>
                                        </Grid>
                                        <WrapPanel HorizontalAlignment="Center">
                                            <Label FontFamily="Cakra Normal" Foreground="#2A3759" Content="Описание:"/>
                                        </WrapPanel>
                                        <TextBlock FontFamily="Anticva" Foreground="#2A3759" FontSize="12"
                                               LineHeight="15" TextTrimming="WordEllipsis" TextWrapping="Wrap"
                                               TextAlignment="Left"
                                               >Размер набора 13х18,5 см, канва - аида 14 белая
                                        </TextBlock>
                                        <WrapPanel>
                                            <Label>
                                                <Hyperlink Name="hlAbout" Foreground="#2A3759" FontFamily="Cakra Normal"
                                                       Click="hlAbout_Click"
                                                       >Подробнее
                                                </Hyperlink>
                                            </Label>
                                        </WrapPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <Button Name="btnBuy" Margin="0 10" MaxWidth="150"
                                                BorderBrush="#431D32" Background="#778FD2" HorizontalAlignment="Center"
                                                Click="btnBuy_Click"                                        
                                                >
                                            <WrapPanel>
                                                <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="White"
                                                           >Купить
                                                </TextBlock>
                                            </WrapPanel>
                                        </Button>
                                        <WrapPanel HorizontalAlignment="Center">
                                            <RepeatButton Name="btnMinus" Margin="0 0 10 0" BorderBrush="#778FD2"
                                                    VerticalAlignment="Bottom" MinWidth="20" Click="btnMinus_Click"
                                                    >
                                                <RepeatButton.Background>
                                                    <SolidColorBrush Opacity="0.25"/>
                                                </RepeatButton.Background>
                                                <WrapPanel>
                                                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
                                                               >-
                                                    </TextBlock>
                                                </WrapPanel>
                                            </RepeatButton>
                                            <TextBlock Name="txblQuan" Foreground="#2A3759" VerticalAlignment="Center"
                                                       FontFamily="Caesar Dressing Cyrillic" TextWrapping="Wrap"
                                                       FontSize="18" LineHeight="15" HorizontalAlignment="Center"
                                                       >1    
                                            </TextBlock>                                            
                                            <RepeatButton Name="btnPlus" Margin="10 0 0 0" BorderBrush="#778FD2"
                                                    VerticalAlignment="Bottom" MinWidth="20" Click="btnPlus_Click"
                                                    >
                                                <RepeatButton.Background>
                                                    <SolidColorBrush Opacity="0.25"/>
                                                </RepeatButton.Background>
                                                <WrapPanel>
                                                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
                                                               >+
                                                    </TextBlock>
                                                </WrapPanel>
                                            </RepeatButton>
                                        </WrapPanel>
                                        <Button Name="btnDel" MinWidth="100" MaxWidth="120"
                                                Margin="10" BorderBrush="#778FD2" VerticalAlignment="Bottom" Click="btnDel_Click"                                                
                                                >
                                            <Button.Background>
                                                <SolidColorBrush Opacity="0.25"/>
                                            </Button.Background>
                                            <WrapPanel>
                                                <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
                                                           >Удалить
                                                </TextBlock>
                                            </WrapPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>                            
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button  Name="btnDelAll" Grid.Column="0" Margin="0 10 0 0"
                         BorderBrush="#778FD2" HorizontalAlignment="Left" Click="btnDelAll_Click"                     
                         >
                    <Button.Background>
                        <SolidColorBrush Opacity="0.25"/>
                    </Button.Background>
                    <StackPanel>
                        <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
                                   HorizontalAlignment="Center" Margin="5 0"
                                   >Удалить
                        </TextBlock>
                        <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759"
                                   HorizontalAlignment="Center" Margin="5 0"
                                   >выбранные товары
                        </TextBlock>
                    </StackPanel>
                </Button>
                <Button Name="btnPlaceOrder" BorderBrush="#431D32" Margin="0 10 0 0"
                        Background="#778FD2" HorizontalAlignment="Right" Grid.Column="2" Click="btnPlaceOrder_Click"
                        >
                    <StackPanel>
                        <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="White"
                                   HorizontalAlignment="Center" Margin="25 0"
                                   >Оформить
                        </TextBlock>
                        <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="White"
                                   HorizontalAlignment="Center" Margin="25 0"
                                   >заказ
                        </TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
