<Page x:Class="NeedleworkStore.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeedleworkStore.Pages"
      mc:Ignorable="d"
      Title="ProfilePage">
    <Page.Resources>
        <Style x:Key="MainLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource fontCaesarDressingCyrillic}"/>
            <Setter Property="Foreground" Value="#2A3759"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Page.Resources>
    <StackPanel DockPanel.Dock="Top">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Center" Grid.Column="0">
                <Button Name="btnFav" MinWidth="100" MaxWidth="120" Margin="10"
                    Style="{StaticResource btnColor}" Click="btnFav_Click"
                >
                    <StackPanel>
                        <TextBlock Style="{StaticResource txtButtonColor}" FontSize="16" Text="избранное"/>
                    </StackPanel>
                </Button>
                <Button Name="btnOrders" MinWidth="100" MaxWidth="120" Margin="10"
                        Style="{StaticResource btnColor}" Click="btnOrders_Click"
                    >
                    <StackPanel>
                        <TextBlock Style="{StaticResource txtButtonColor}" FontSize="16" Text="заказы"/>
                    </StackPanel>
                </Button>
                <Image Source="\ProdImages\KlartLavandadlyanee.jpg" MaxWidth="180" MaxHeight="180"
                        HorizontalAlignment="Right" Margin="20" MouseDown="Image_MouseDown"
                        >
                </Image>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <GroupBox Margin="10 10 10 30">
                    <StackPanel>
                        <WrapPanel HorizontalAlignment="Center" MaxHeight="120" Margin="0 10 0 30">
                            <Label Content="Профиль" FontFamily="Caesar Dressing Cyrillic" FontSize="24"
                                    HorizontalAlignment="Center" Foreground="#431D32"
                                    />
                        </WrapPanel>
                        <UniformGrid Columns="2" Rows="8">
                            <Label Content="Логин:" HorizontalAlignment="Right" Style="{StaticResource MainLabel}"/>
                            <Label Name="lblLog" HorizontalAlignment="Left" Style="{StaticResource MainLabel}"/>
                            <Label Content="Пароль:" HorizontalAlignment="Right" Style="{StaticResource MainLabel}"/>
                            <Label Name="lblPass" HorizontalAlignment="Left" Style="{StaticResource MainLabel}"/>
                            <Label Content="e-mail:" HorizontalAlignment="Right" Style="{StaticResource MainLabel}"/>
                            <Label Name="lblEmail" HorizontalAlignment="Left" Style="{StaticResource MainLabel}"/>
                            <Label Content="Фамилия:" HorizontalAlignment="Right" Style="{StaticResource MainLabel}"/>
                            <Label Name="lblLastname" HorizontalAlignment="Left" Style="{StaticResource MainLabel}"/>
                            <Label Content="Имя:" HorizontalAlignment="Right" Style="{StaticResource MainLabel}"/>
                            <Label Name="lblFirstname" HorizontalAlignment="Left"  Style="{StaticResource MainLabel}"/>
                            <Label Content="Отчество:" HorizontalAlignment="Right" Style="{StaticResource MainLabel}"/>
                            <Label Name="lblPatr" HorizontalAlignment="Left" Style="{StaticResource MainLabel}"/>
                            <Label Content="Дата рождения:" HorizontalAlignment="Right" Style="{StaticResource MainLabel}"/>
                            <Label Name="lblBirthDate" HorizontalAlignment="Left" Style="{StaticResource MainLabel}"/>
                            <Label Content="Телефон:" HorizontalAlignment="Right" Style="{StaticResource MainLabel}"/>
                            <Label Name="lblPhone" HorizontalAlignment="Left" Style="{StaticResource MainLabel}"/>
                        </UniformGrid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <Button Name="btnRedact" Width="140" Margin="10" Height="30"
                        Style="{StaticResource btnColor}" Click="btnRedact_Click"
                    >
                    <StackPanel>
                        <TextBlock Style="{StaticResource txtButtonColor}" FontSize="16" Text="редактировать"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </StackPanel>
</Page>
