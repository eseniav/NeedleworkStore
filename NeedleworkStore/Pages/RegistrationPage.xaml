<Page x:Class="NeedleworkStore.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeedleworkStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      WindowTitle="Registration" ShowsNavigationUI="False"
      Title="RegistrationPage"  Height="800" Width="800" MinWidth="230" MinHeight="480"
      >
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Top">            
            <WrapPanel HorizontalAlignment="Center" MaxHeight="120" Margin="0 10 0 30">
                <Label Content="Регистрация" FontFamily="Caesar Dressing Cyrillic" FontSize="24"
           HorizontalAlignment="Center" Foreground="#431D32"
           />
            </WrapPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel MaxWidth="150" MinHeight="30" Grid.Column="0" Grid.Row="0">
                    <Label Content="Фамилия" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel MaxWidth="150" MinHeight="30" Grid.Column="0" Grid.Row="1">
                    <Label Content="Имя" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel MaxWidth="150" MinHeight="30" Grid.Column="0" Grid.Row="2">
                    <Label Content="Отчество" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                    <PasswordBox Margin="0 0 0 10"/>
                </StackPanel>
                <StackPanel MinHeight="30" Grid.Column="1" Grid.Row="0">
                    <Label Content="Логин" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" 
               Foreground="#2A3759" Margin="0 0 50 0"
               />
                    <TextBox MaxWidth="150"/>
                    <TextBlock Foreground="#3D5220" FontFamily="Acherus Feral Bold" TextWrapping="Wrap"
                   FontSize="10" FontWeight="Black" Margin="50 0 0 0"
                   >пояснения, какой должен быть логин
                    </TextBlock>
                    <TextBlock Foreground="#852614" FontFamily="Anticva" TextWrapping="Wrap"
                   FontSize="10" Margin="50 0 0 0"
                   >вывод ошибки
                    </TextBlock>
                </StackPanel>
                <StackPanel MinHeight="30" Grid.Column="1" Grid.Row="1">
                    <Label Content="Пароль" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" 
               Foreground="#2A3759" Margin="0 0 50 0"
               />
                    <TextBox MaxWidth="150"/>
                    <TextBlock Foreground="#3D5220" FontFamily="Acherus Feral Bold" TextWrapping="Wrap"
                   FontSize="10" FontWeight="Black" Margin="50 0 0 0"
                   >пояснения, какой должен быть пароль
                    </TextBlock>
                    <TextBlock Foreground="#852614" FontFamily="Anticva" TextWrapping="Wrap"
                   FontSize="10" Margin="50 0 0 0"
                   >вывод ошибки
                    </TextBlock>
                </StackPanel>
                <StackPanel MinHeight="30" Grid.Column="1" Grid.Row="2">
                    <Label Content="Повторите пароль" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic"
               Foreground="#2A3759" Margin="0 0 50 0"
               />
                    <PasswordBox  MaxWidth="150"/>
                    <TextBlock Foreground="#852614" FontFamily="Anticva" TextWrapping="Wrap"
                   FontSize="10" Margin="50 2 0 0"
                   >вывод ошибки
                    </TextBlock>
                </StackPanel>
                <StackPanel MinHeight="30" Grid.Column="2" Grid.Row="0">
                    <Label Content="Телефон" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic"
               Foreground="#2A3759" Margin="0 0 50 0"
               />
                    <TextBox MaxWidth="150"/>
                    <TextBlock Foreground="#852614" FontFamily="Anticva" TextWrapping="Wrap"
                   FontSize="10" Margin="50 2 0 0"
                   >вывод ошибки
                    </TextBlock>
                </StackPanel>
                <StackPanel MinHeight="30" Grid.Column="2" Grid.Row="1">
                    <Label Content="Email" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic"
               Foreground="#2A3759" Margin="0 0 50 0"
               />
                    <TextBox MaxWidth="150"/>
                    <TextBlock Foreground="#852614" FontFamily="Anticva" TextWrapping="Wrap"
                   FontSize="10" Margin="50 2 0 0"
                   >вывод ошибки
                    </TextBlock>
                </StackPanel>
                <StackPanel MinHeight="30" Grid.Column="2" Grid.Row="2">
                    <Label Content="Дата рождения" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic"
               Foreground="#2A3759" Margin="0 0 50 0"
               />
                    <DatePicker MaxWidth="150" SelectedDateFormat="Short"
                    DisplayDateStart="03/1925" DisplayDateEnd="03/2011"/>
                    <TextBlock Foreground="#3D5220" FontFamily="Acherus Feral Bold" TextWrapping="Wrap"
                   FontSize="10" FontWeight="Black" Margin="50 0 0 0"
                   >пояснения, какой должна быть дата
                    </TextBlock>
                    <TextBlock Foreground="#852614" FontFamily="Anticva" TextWrapping="Wrap"
                   FontSize="10" Margin="50 2 0 0"
                   >вывод ошибки
                    </TextBlock>
                </StackPanel>
            </Grid>
            <StackPanel MaxWidth="150" MinHeight="30">
                <Button Name="btnReg" Margin="0 30" MaxWidth="150"
            BorderBrush="#431D32" Background="#778FD2" Click="btnReg_Click"
            >
                    <WrapPanel>
                        <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="White">Зарегистрироваться</TextBlock>
                    </WrapPanel>
                </Button>
            </StackPanel>
        </StackPanel>        
        <Grid Name="grdBottom" DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Name="btnBack" MinWidth="100" MaxWidth="120" Margin="10" 
            BorderBrush="#778FD2" Grid.Column="0" Width="Auto" 
            HorizontalAlignment="Left" ToolTip="Предыдущая страница" ToolTipService.ShowDuration="2000" 
            ToolTipService.HasDropShadow="True" Click="btnBack_Click" MaxHeight="30"
            >
                <Button.Background>
                    <SolidColorBrush Opacity="0.25"/>
                </Button.Background>
                <WrapPanel>
                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">Назад</TextBlock>
                </WrapPanel>
            </Button>
            <WrapPanel HorizontalAlignment="Center" MaxHeight="120"   Margin="0 10 0 30" Grid.Column="1">
                <Label Content="Мастерская" FontFamily="Hlobus" FontSize="28" HorizontalAlignment="Center" Foreground="#431D32"/>
                <Label Content="вдохновения" FontFamily="Hlobus" FontSize="28" HorizontalAlignment="Center" Foreground="#431D32"/>
            </WrapPanel>
            <Button Name="btnForward" MinWidth="100" MaxWidth="120" Margin="10" 
            BorderBrush="#778FD2" Grid.Column="2"  HorizontalAlignment="Right"  
            ToolTip="Следующая страница" ToolTipService.ShowDuration="2000" 
            ToolTipService.HasDropShadow="True" Click="btnForward_Click"
            MaxHeight="30"
            >
                <Button.Background>
                    <SolidColorBrush Opacity="0.25"/>
                </Button.Background>
                <WrapPanel>
                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">Вперед</TextBlock>
                </WrapPanel>
            </Button>
        </Grid>
    </DockPanel>
</Page>
