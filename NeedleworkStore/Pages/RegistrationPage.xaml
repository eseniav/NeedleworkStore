<Page x:Class="NeedleworkStore.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeedleworkStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      WindowTitle="Registration" ShowsNavigationUI="False"
      Title="RegistrationPage"  Height="450" Width="800" MinWidth="230" MinHeight="480">
    <StackPanel Margin="20">
        <WrapPanel MaxWidth="400" MinHeight="30">
            <Button MinWidth="100" MaxWidth="120" Margin="10" BorderBrush="#778FD2">
                <Button.Background>
                    <SolidColorBrush Opacity="0.25"/>
                </Button.Background>
                <WrapPanel>
                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">О магазине</TextBlock>
                </WrapPanel>
            </Button>
            <Button MinWidth="100" MaxWidth="120" Margin="10" BorderBrush="#778FD2" Name="btnAuthReg" Click="btnAuthReg_Click">
                <Button.Background>
                    <SolidColorBrush Opacity="0.25"/>
                </Button.Background>
                <WrapPanel>
                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">Войти</TextBlock>
                </WrapPanel>
            </Button>
            <Button MinWidth="100" MaxWidth="120" Margin="10" BorderBrush="#778FD2">
                <Button.Background>
                    <SolidColorBrush Opacity="0.25"/>
                </Button.Background>
                <WrapPanel>
                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">Гость</TextBlock>
                </WrapPanel>
            </Button>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Center" MaxHeight="120" Margin="0 10 0 30" Grid.Column="1">
            <Label Content="Регистрация" FontFamily="Caesar Dressing Cyrillic" FontSize="24" HorizontalAlignment="Center" Foreground="#431D32"/>            
        </WrapPanel>
        <Grid>            
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel MaxWidth="150" MinHeight="30" Grid.Column="0">
                <Label Content="Фамилия" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <TextBox/>
                <Label Content="Имя" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <TextBox/>
                <Label Content="Отчество" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <PasswordBox Margin="0 0 0 10"/>                
            </StackPanel>
            <StackPanel MaxWidth="150" MinHeight="30" Grid.Column="1">
                <Label Content="Логин" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <TextBox/>
                <Label Content="Пароль" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <TextBox/>
                <Label Content="Повторите пароль" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <PasswordBox Margin="0 0 0 10"/>
            </StackPanel>
            <StackPanel MaxWidth="150" MinHeight="30" Grid.Column="2">
                <Label Content="Телефон" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <TextBox/>
                <Label Content="Email" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <TextBox/>
                <Label Content="Дата рождения" HorizontalAlignment="Right" FontFamily="Caesar Dressing Cyrillic" Foreground="#2A3759"/>
                <DatePicker Margin="0 0 0 10"/>
            </StackPanel>
        </Grid>
        <StackPanel MaxWidth="150" MinHeight="30">
            <Button Margin="0 10" MaxWidth="150" BorderBrush="#431D32" Background="#778FD2">                
                <WrapPanel>
                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="White">Зарегистрироваться</TextBlock>
                </WrapPanel>
            </Button>
        </StackPanel>        
        <Grid Margin="0 50 0 0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Height="25" MinWidth="100" MaxWidth="120" Margin="10" BorderBrush="#778FD2" Grid.Column="0" Width="Auto" HorizontalAlignment="Left" Name="btnBack" Click="btnBack_Click">
                <Button.Background>
                    <SolidColorBrush Opacity="0.25"/>
                </Button.Background>
                <WrapPanel>
                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">Назад</TextBlock>
                </WrapPanel>
            </Button>
            <WrapPanel HorizontalAlignment="Center" MaxHeight="120"   Margin="0 10 0 30" Grid.Column="1">
                <Label Content="Мастерская" FontFamily="Hlobus" FontSize="28" HorizontalAlignment="Center" Foreground="#431D32"/>
                <Label Content="вдохновения" FontFamily="Hlobus" FontSize="28" HorizontalAlignment="Center" Foreground="#431D32"/>
            </WrapPanel>
            <Button Height="25" MinWidth="100" MaxWidth="120" Margin="10" BorderBrush="#778FD2" Grid.Column="2"  HorizontalAlignment="Right" Name="btnForward" Click="btnForward_Click">
                <Button.Background>
                    <SolidColorBrush Opacity="0.25"/>
                </Button.Background>
                <WrapPanel>
                    <TextBlock FontFamily="Caesar Dressing Cyrillic" FontSize="16" Foreground="#2A3759">Вперед</TextBlock>
                </WrapPanel>
            </Button>
        </Grid>
    </StackPanel>
</Page>
