<UserControl x:Class="NeedleworkStore.UCElements.SearchSidebarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeedleworkStore.UCElements"
             mc:Ignorable="d"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <GroupBox Header="Виды рукоделия" Style="{StaticResource GrBHeader}">
                <TabControl>
                    <TabControl.Background>
                        <SolidColorBrush Opacity="0.25"/>
                    </TabControl.Background>
                    <TabItem Header="Рукоделие" Foreground="#2A3759">
                        <TabItem.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </TabItem.Background>
                        <ListBox Name="lbxNedleTypes">
                            <ListBox.Background>
                                <SolidColorBrush Opacity="0.25"/>
                            </ListBox.Background>
                            <ListBoxItem>
                                <CheckBox Content="Все" Foreground="#2A3759" IsChecked="True"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Вышивка" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Шитье" Foreground="#2A3759"/>
                            </ListBoxItem>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Вышивка" Foreground="#2A3759">
                        <TabItem.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </TabItem.Background>
                        <ListBox Name="lbxStitchTypes">
                            <ListBox.Background>
                                <SolidColorBrush Opacity="0.25"/>
                            </ListBox.Background>
                            <ListBoxItem>
                                <CheckBox Content="Все" Foreground="#2A3759" IsChecked="True"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Крестик" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Бисер" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Гладь" Foreground="#2A3759"/>
                            </ListBoxItem>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </GroupBox>
            <GroupBox Header="Категории" Style="{StaticResource GrBHeader}">
                <TabControl>
                    <TabControl.Background>
                        <SolidColorBrush Opacity="0.25"/>
                    </TabControl.Background>
                    <TabItem Header="Категории" Foreground="#2A3759">
                        <TabItem.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </TabItem.Background>
                        <ListBox Name="lbxProdTypes">
                            <ListBox.Background>
                                <SolidColorBrush Opacity="0.25"/>
                            </ListBox.Background>
                            <ListBoxItem>
                                <CheckBox Content="Все" Foreground="#2A3759" IsChecked="True"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Наборы" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Аксессуары" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Печатные издания" Foreground="#2A3759"/>
                            </ListBoxItem>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Аксессуары" Foreground="#2A3759">
                        <TabItem.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </TabItem.Background>
                        <ListBox Name="lbxAccess">
                            <ListBox.Background>
                                <SolidColorBrush Opacity="0.25"/>
                            </ListBox.Background>
                            <ListBoxItem>
                                <CheckBox Content="Все" Foreground="#2A3759" IsChecked="True"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Ножницы" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Пяльцы" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Наперстки" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Магниты" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Иглы" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Хранение" Foreground="#2A3759"/>
                            </ListBoxItem>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </GroupBox>
            <GroupBox Header="Производители и Темы" Style="{StaticResource GrBHeader}">
                <TabControl>
                    <TabControl.Background>
                        <SolidColorBrush Opacity="0.25"/>
                    </TabControl.Background>
                    <TabItem Header="Производители" Foreground="#2A3759">
                        <TabItem.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </TabItem.Background>
                        <ListBox Name="lbxDesigners">
                            <ListBox.Background>
                                <SolidColorBrush Opacity="0.25"/>
                            </ListBox.Background>
                            <ListBoxItem>
                                <CheckBox Content="Все" Foreground="#2A3759" IsChecked="True"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Dimensions" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Miadolla" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Panna" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Prym" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="RTO" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Гамма" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Кларт" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Риолис" Foreground="#2A3759"/>
                            </ListBoxItem>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Темы" Foreground="#2A3759">
                        <TabItem.Background>
                            <SolidColorBrush Opacity="0.25"/>
                        </TabItem.Background>
                        <ListBox Name="lbxThemes">
                            <ListBox.Background>
                                <SolidColorBrush Opacity="0.25"/>
                            </ListBox.Background>
                            <ListBoxItem>
                                <CheckBox Content="Все" Foreground="#2A3759" IsChecked="True"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Животные" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Люди" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Новый год" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Природа" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Прикладное" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Маяки" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Коты" Foreground="#2A3759"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="Цветы" Foreground="#2A3759"/>
                            </ListBoxItem>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </GroupBox>
            <GroupBox Header="Страны" FontFamily="Cakra Normal" Foreground="White" Margin="5 0 5 10">
                <ListBox Name="lbxCountries">
                    <ListBox.Background>
                        <SolidColorBrush Opacity="0.25"/>
                    </ListBox.Background>
                    <ListBoxItem>
                        <CheckBox Content="Все" Foreground="#2A3759" IsChecked="True"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <CheckBox Content="Германия" Foreground="#2A3759"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <CheckBox Content="Россия" Foreground="#2A3759"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <CheckBox Content="США" Foreground="#2A3759"/>
                    </ListBoxItem>
                </ListBox>
            </GroupBox>
            <GroupBox Header="Цена" Style="{StaticResource GrBHeader}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <WrapPanel  Grid.Row="0">
                        <Label Content="От" Foreground="#2A3759"/>
                        <TextBox Name="txtFrom" MaxHeight="18" MinWidth="100"
                                 FontSize="16" MouseDoubleClick="txtFrom_MouseDoubleClick"
                                 />
                    </WrapPanel>
                    <WrapPanel  Grid.Row="1">
                        <Label Content="До" Foreground="#2A3759"/>
                        <TextBox Name="txtTo" MaxHeight="18" MinWidth="100"
                                 FontSize="16" MouseDoubleClick="txtTo_MouseDoubleClick"
                                 />
                    </WrapPanel>
                </Grid>
            </GroupBox>
            <Button Name="btnSet" MinWidth="100" MaxWidth="150" Height="25"
        Margin="10" Style="{StaticResource btnColor}" Grid.Row="2"
        HorizontalAlignment="Center" IsDefault="True" Click="btnSet_Click"
        >
                <WrapPanel>
                    <TextBlock Style="{StaticResource txtButtonColor}" FontSize="16">Применить</TextBlock>
                </WrapPanel>
            </Button>
            <Button Name="btnReset" MinWidth="100" MaxWidth="150" Height="25"
                    Margin="10" Style="{StaticResource btnOpacity}" Grid.Row="2"
                    HorizontalAlignment="Center" IsDefault="True" Click="btnReset_Click"
                    >
                <WrapPanel>
                    <TextBlock Style="{StaticResource txtButtonOpacity}" FontSize="16">Сбросить все</TextBlock>
                </WrapPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
