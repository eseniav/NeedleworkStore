<UserControl x:Class="NeedleworkStore.UCElements.AddInListboxUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeedleworkStore.UCElements"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="Название" HorizontalAlignment="Right" Style="{StaticResource DarkCaesar}" Margin="0 10 0 0"/>
            <TextBox Name="txtbox" Style="{StaticResource txtBoxReg}"/>
            <GroupBox Style="{StaticResource GrBHeader}" Margin="10">
                <ListBox Name="lbx">
                    <ListBox.Background>
                        <SolidColorBrush Opacity="0.25"/>
                    </ListBox.Background>
                    <ListBoxItem>
                        <CheckBox Content="Все" Foreground="#2A3759" IsChecked="True"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <CheckBox Content="Россия" Foreground="#2A3759"/>
                    </ListBoxItem>
                </ListBox>
            </GroupBox>
        </StackPanel>
        <Button Name="btnAdd" Grid.Column="1" HorizontalAlignment="Center"
    Style="{StaticResource btnOpacity}" MaxWidth="120" Height="25"
    >
            <WrapPanel>
                <TextBlock Style="{StaticResource txtButtonOpacity}" FontSize="16" Text="Добавить"/>
            </WrapPanel>
        </Button>
    </Grid>
</UserControl>
