<Window x:Class="NeedleworkStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeedleworkStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="LayOut">
        <Button Height="50" Width="150" x:Name="btnStart" Content="Нажать" Click="btnStart_Click" Background="Beige" Foreground="Blue"/>
        <Button Height="30" Width="100" x:Name="btnSart" Content="Ok" Click="btnStart_Click" Background="Red" Foreground="Blue"/>
    </StackPanel>
</Window>
