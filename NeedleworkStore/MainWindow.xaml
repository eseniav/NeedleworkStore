<Window x:Class="NeedleworkStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeedleworkStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="LayOut" Margin="20" MaxWidth="200" MinHeight="300">
        <Label Content="Логин"/>
        <TextBox/>
        <Label Content="Пароль"/>
        <PasswordBox Margin="0 10"/>
        <Button Content="Войти" Margin="0 10" MaxWidth="70"/>
        <Button>
            <WrapPanel>
                <TextBlock FontWeight="Bold">Регистрация</TextBlock>
                <TextBlock Foreground="Red"> пользователя</TextBlock>
            </WrapPanel>
            
        </Button>
    </StackPanel>
</Window>
